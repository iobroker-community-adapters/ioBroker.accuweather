    "name": "algar42",
    "email": "igor.aleschenkov@gmail.com"
  },
  "homepage": "https://github.com/iobroker-community-adapters/ioBroker.accuweather",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Weather",
    "AccuWeather",
    "Forecast"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iobroker-community-adapters/ioBroker.accuweather"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^1.11.0",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^2.1.0",
    "@iobroker/testing": "^5.1.1",
    "@iobroker/types": "^7.1.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/node": "^24.9.2",
    "@types/qs": "^6.14.0",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE",
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/iobroker-community-adapters/ioBroker.accuweather/issues"
  },
  "readmeFilename": "README.md",
  "contributors": [
    {
      "name": "iobroker-community-adapters",
      "email": "iobroker-community-adapters@gmx.de"
